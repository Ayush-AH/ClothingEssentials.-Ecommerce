<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdn.jsdelivr.net/npm/remixicon@4.3.0/fonts/remixicon.css" rel="stylesheet" />
</head>
<body>
    <div class="navbar pt-4 w-full px-4 flex items-center justify-between">
        <div class="flex items-center gap-10">
            <h2 class="font-extrabold text-xl">ALLSTAG</h2>
            <a href="/" class="text-zinc-500  font-semibold">Home</a>
        </div>
        <div class="flex items-center gap-6 text-2xl">
            <i class="ri-search-line"></i>
            <a class="text-sm px-3 py-2 bg-black text-white text-xs hover:bg-white border hover:text-black hover:border-black rounded font-bold  tracking-wide" href="/admin/createproduct">Add Product <span><i class="ri-add-line"></i></span></a>
        </div>
    </div>
    <div class="w-full px-44 " >
        <h1 class="text-3xl font-bold uppercase mt-12 mb-5 capitalize">All products</h1>
        <hr class="bg-black/10 h-[.8px]">
        <div class="w-full">
            <div class="sort w-full p-4 flex items-center justify-end">
                <div class="flex items-center gap-3 py-2">
                    <h4 class="uppercase font-semibold text-lg">Sort by</h4>
                   <div class="border border-black/40 px-2">
                    <select name="" class="py-2 px-3 outline-none ">
                        <option value="a to z">Features</option>
                        <option value="a to z">Alphabetically , A-Z</option>
                        <option value="a to z">Alphabetically , Z-A</option>
                        <option value="z to a">Price , low to high</option>
                        <option value="z to a">Price , high to low</option>
                        <option value="z to a">Date , old to new</option>
                        <option value="z to a">Date , new to old</option>
                    </select>
                   </div>
                </div>
            </div>
            <div class="products w-full flex flex-wrap items-start justify-center gap-3">
                <% if(products.length > 0){ %>
                    <% products.forEach(function(product){ %>
                        <div class="product w-[24%] relative mb-4">
                            <% if(!product.availability){ %>
                                <h5 class="px-2 py-1 text-xs bg-red-300 text-white font-semibold absolute top-0 left-0 z-2">Sold Out</h5>
                            <% }%>
                            <div class="w-full overflow-hidden h-[90]">
                                <img class="w-full h-full object-cover" src="data:<%= product.mimetype %>;base64, <%= product.productImage.toString('base64') %>" alt="">
                            </div>
                            <h2 class="text-sm font-semibold py-2 pb-1 capitalize"><%= product.productName %></h2>
                            <div class="w-full flex justify-between items-center">
                            <h3 class="flex gap-3 justify-center"><span class="font-semibold text-lg line-through">RS. <%= product.price %>.00</span><span class="font-semibold text-lg ">RS. <%= product.discount > 0 ? product.price*(product.discount/100) : product.price  %>.00</span></h3>
                            <a class="text-white px-3 py-1 rounded text-xs bg-blue-600" href="/admin/editproduct">Edit</a>
                            </div>
                        </div>
                    <%}) %>
                <% } %>
                
            </div>
        </div>
    </div>
    
</body>
</html>